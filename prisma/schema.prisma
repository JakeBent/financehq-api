generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgres"
  url      = env("POSTGRES_URL")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  name     String?
  events   Event[]
}

model Event {
  id          String @id @default(uuid())
  name        String
  description String?
  location    String?
  startTime   DateTime
  endTime     DateTime
  organizer   User @relation(fields: [organizerId], references: [id])
  organizerId String
}